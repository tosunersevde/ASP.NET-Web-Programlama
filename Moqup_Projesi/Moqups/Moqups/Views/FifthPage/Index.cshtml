<!--fifth image-->
@* Sayfa İçeriği *@
@section content {
    <div class="container">
        <div class="p-4 m-4 border border-dark">
            <div class="header pe-4">
                <div class="logo d-flex justify-content-end">
                    <img class="img-fluid"
                         src="@Url.Content("~/img/firmanet_logo.png")"
                         width="160"
                         height="48" />
                </div>
            </div>

            <div class="takip-sonucu pt-4 ps-4 pb-4 mt-3">
                <div class="row text-start">
                    <div class="main-texts text-green pb-4">
                        Değerlendirme Sonucu
                    </div>
                    <div class="row text-start text-grey">
                    @(Model == null
                            ? "Bu Takip Numarasına Ait Geri Dönüş Henüz Yapılmadı!"
                    : Model.geriDonusMesaji)

                        
                    </div>
                </div>
            </div>
        </div>
    </div>
}

