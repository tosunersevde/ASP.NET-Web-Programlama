@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@* CSS Dosyaları *@
@section css_files {
    @* <link rel="stylesheet" href="@Url.Content("~/Content/css/styles.css")"> *@
    <link rel="stylesheet" href="@Url.Content("~/css/styles.css")">
}

@* Sayfa İçeriği *@
@section content {
    <div class="container">
        <div class="p-4 m-4 border border-dark">
            <div class="header pe-4">
                <div class="logo d-flex justify-content-end">
                    <img class="img-fluid" src="@Url.Content("~/img/firmanet_logo.png")" width="160" height="48" />
                </div>
            </div>
            <div class="karşılama mt-2">
                <div class="text-center main-texts text-green">IIC</div>
                <div class="text-center text-success fw-bold pb-2">If I Could</div>
                <div class="row text-start text-grey">
                    <p>
                        Bu formun amacı, Firmanet Yazılım A.Ş. bünyesinde yenilikçi bir
                        kültür oluşturarak iç ve dış müşterilerin memnuniyetini artırmaya
                        yönelik uygulamaları hayata geçirmektir.
                    </p>
                    <p>
                        Forma kaydettiğiniz içerikler, gizlilik prensibiyle muhafaza
                        edilerek, değerlendirilmek üzere sadece Genel Müdür ile
                        paylaşılmaktadır.
                    </p>
                    <p>
                        Formda adınızı belirtmeniz durumunda, kaydettiğiniz her konu için
                        tarafınıza geribildirim yapılacaktır. Aynı zamanda formu
                        gönderdikten sonra oluşacak takip kodu sayesinde KAYIT TAKİP
                        butonuna tıklayarak kaydınızla ilgili son durumu takip
                        edebilirsiniz.
                    </p>
                    <p>
                        "<span class="text-green fw-bold">If I Could</span>" yani
                        yapabilseydim şunu yapardım diyeceğiniz her bildirim bizi daha
                        ileri taşıyacak önemli katkılar sağlayabilir. Bu gelişim sürecine
                        katkınız için şimdiden teşekkürlerimizi sunarız.
                    </p>
                </div>
                <div class="row justify-content-center gx-0">
                    <div class="col-md-2 text-center pt-3">
                        <a href="/SecondPage/Index" type="button" class="btn rounded-1 btn-lg px-4 w-100" style="background-color:#4c7a34; color:#cbe8ba;">
                            KAYIT OLUŞTUR
                        </a>
                    </div>
                </div>
                
                <div class="line-container position-relative mb-2 mt-1">
                    <div class="text-center separator"></div>
                </div>
                <div class="row justify-content-center gx-0">
                    <div class="col-md-2 text-center">
                        <a href="/FourthPage/Index" type="button" class="btn rounded-1 btn-lg px-4 w-100" style="background-color:#0844a4; color:#a8cdf6;">
                            KAYIT TAKİP
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@* JavaScript Dosyaları *@
@section js_files {
    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
}
